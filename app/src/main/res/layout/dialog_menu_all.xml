<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_margin="5dp"
        android:background="@drawable/btn_rounded"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/linearProfilSekolah"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/profil_sekolah"/>
                <TextView
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="@dimen/text_smoll"
                    android:text="Profil\nSekolah"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/linearAgendaSekolah"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/agenda_sekolah"/>
                <TextView
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="@dimen/text_smoll"
                    android:text="Agenda\nSekolah"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/linearPrestasi"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/prestasi"/>
                <TextView
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="@dimen/text_smoll"
                    android:text="Prestasi"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/linearPPDB"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ppdb"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:fontFamily="@font/roboto"
                    android:gravity="center|top"
                    android:text="PPDB"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_smoll"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/linearStrukturOrganisasi"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/struktur_organisasi"/>
                <TextView
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_smoll"
                    android:layout_weight="2"
                    android:text="Struktur\nSekolah"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/linearJadwalPelajaran"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/jadwal_pelajaran"/>
                <TextView
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="@dimen/text_smoll"
                    android:text="Jadwal\nPelajaran"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/linearEvadir"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/evadir"/>
                <TextView
                    android:textSize="@dimen/text_smoll"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Evadir"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/linearMediaPembelajaran"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/media_pelajaran"/>
                <TextView
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="@dimen/text_smoll"
                    android:text="Media\nPembelajaran"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/linearTugas"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/tugas"/>
                <TextView
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="@dimen/text_smoll"
                    android:text="Tugas"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/linearLihatSemua"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/e_report"/>
                <TextView
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="@dimen/text_smoll"
                    android:text="E-Raport"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/linearGuru"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/guru"/>
                <TextView
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="@dimen/text_smoll"
                    android:text="Guru"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/linearBiayaAkademik"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/biaya_akademik"/>
                <TextView
                    android:textSize="@dimen/text_smoll"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Biaya\nAkademik"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/linearPembayaran"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/pembayaran"/>
                <TextView
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="@dimen/text_smoll"
                    android:text="Pembayaran"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/linearROB"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/rob_dana"/>
                <TextView
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="@dimen/text_smoll"
                    android:text="ROB Dana\nBOP"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="invisible"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/lihat_semua_2"/>
                <TextView
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="@dimen/text_medium"
                    android:text="Lihat\nSemua"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearKembali"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded_primary">

            <Button
                android:id="@+id/btnKembali"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_margin="2dp"
                android:background="@drawable/btn_rounded"
                android:text="Kembali"
                android:fontFamily="@font/roboto"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_xtra_large" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>