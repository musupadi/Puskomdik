<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/gradient_background">

                </ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/adult"
                        android:id="@+id/ivProfile"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Muhammad Supriyadi"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:id="@+id/tvNama"
                        android:textSize="@dimen/header_text"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="829312873812"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:id="@+id/tvNISN"
                        android:textSize="@dimen/header_text_smoll"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="250dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/round_header">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="30dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="NISN"
                            android:textSize="@dimen/text_xtra_large"
                            android:fontFamily="@font/roboto"
                            android:layout_marginTop="40dp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"/>
                        <TextView
                            android:textSize="@dimen/text_xtra_large"
                            android:fontFamily="@font/roboto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="02020202"
                            android:id="@+id/tvNISN2"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorBlack"/>
                        <TextView
                            android:textSize="@dimen/text_xtra_large"
                            android:fontFamily="@font/roboto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tingkatan"
                            android:layout_marginTop="40dp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"/>
                        <TextView
                            android:textSize="@dimen/text_xtra_large"
                            android:fontFamily="@font/roboto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TK A"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorBlack"/>
                        <TextView
                            android:textSize="@dimen/text_xtra_large"
                            android:fontFamily="@font/roboto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nomor Telpon"
                            android:layout_marginTop="40dp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"/>
                        <TextView
                            android:textSize="@dimen/text_xtra_large"
                            android:fontFamily="@font/roboto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="02020202"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorBlack"/>
                    </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:background="@drawable/btn_round_primary"
                        android:text="Ubah Password"
                        android:id="@+id/btnUbahPassword"
                        android:textColor="@color/colorWhite" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="70dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/btn_round_primary"
                        android:text="Logout"
                        android:id="@+id/btnLogot"
                        android:textColor="@color/colorWhite" />


                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</FrameLayout>